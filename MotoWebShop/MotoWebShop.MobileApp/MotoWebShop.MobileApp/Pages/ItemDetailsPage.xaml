<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotoWebShop.MobileApp.Pages.ItemDetailsPage"
             Title="Item details">
    <ContentPage.Content>
        <StackLayout>
            <Image Aspect="AspectFit" Source="{Binding PictureURL}" WidthRequest="100" HeightRequest="100" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
            <Label x:Name="labelName"/>
            <Label x:Name="labelPrice"/>
            <Label x:Name="labelDescription"/>
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="EntryAmount" Placeholder="Amount" Keyboard="Numeric"/>
                <Button x:Name="ButtonCart" Text="Cart" Clicked="ButtonCart_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>