@model IEnumerable<Model>

<div class="container">
    <br />
    <h1 class="text-center">Add a new model</h1>
    <form method="post" action="/Home/AddModel">
        <div class="form-group">
            <label>Models's name</label>
            <input type="text" class="form-control" placeholder="Enter model name" name="Name">
        </div>
        <div class="form-group">
            <label>Picture's URL</label>
            <input type="text" class="form-control" placeholder="Enter the picture's URL" name="PictureURL">
        </div>
        <div class="form-group">
            <label>Manufacturer's ID</label>
            <input type="number" class="form-control" placeholder="Enter the manufacturer's ID" name="ManufacturerId">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <hr />
    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <div class="row">
                    <div class="col-sm-8">@item.Id</div>
                    <div class="col-sm-1" style="float: right">
                        <form method="get" action="/Home/EditModel">
                            <input type="hidden" name="id" value="@item.Id"/>
                            <input type="image" src="~/images/screwdriver.png" style="max-width:24px;width:100%" />
                        </form>
                    </div>
                    <div class="col-sm-1" style="float: right">
                        <form method="post" action="/Home/DeleteModel">
                            <input type="hidden" name="id" value="@item.Id"/>
                            <input type="image" src="~/images/bin.png" style="max-width:24px;width:100%" />
                        </form>
                    </div>
                    <br />
                    <br />
                </div>
                <ul class="list-group">
                    <li class="list-group-item"><h4>Model name: </h4>@item.Name</li>
                    <li class="list-group-item"><h4>PictureURL: </h4>@item.PictureURL</li>
                    <li class="list-group-item"><h4>Manufacturer's Id: </h4>@item.ManufacturerId</li>
                </ul>
            </li>
        }
    </ul>
</div>