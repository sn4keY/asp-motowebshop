@model Model

<h1 class="text-center">Edit model</h1>
<hr />
<form method="post" action="/Home/EditModel">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label>Models's name</label>
        <input type="text" class="form-control" placeholder="Enter model name" name="Name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label>Picture's URL</label>
        <input type="text" class="form-control" placeholder="Enter the picture's URL" name="PictureURL" value="@Model.PictureURL">
    </div>
    <div class="form-group">
        <label>Manufacturer's ID</label>
        <input type="number" class="form-control" placeholder="Enter the manufacturer's ID" name="ManufacturerId" value="@Model.ManufacturerId">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>