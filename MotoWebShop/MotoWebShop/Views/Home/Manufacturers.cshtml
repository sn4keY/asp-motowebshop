@model IEnumerable<Manufacturer>

<div class="container">
    <br />
    <form method="post" action="/Home/AddManufacturer">
        <div class="form-group">
            <label>Manufacturer's name</label>
            <input type="text" class="form-control" placeholder="Enter manufacturer name" name="Name">
        </div>
        <div class="form-group">
            <label>Picture's URL</label>
            <input type="text" class="form-control" placeholder="Enter the picture's URL" name="PictureURL">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <hr />
    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <div class="row">
                    <div class="col-sm-8">@item.Id</div>
                    <div class="col-sm-1" style="float: right">
                        <form method="get" action="/Home/EditManufacturer">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="image" src="~/images/screwdriver.png" style="max-width:24px;width:100%" />
                        </form>
                    </div>
                    <div class="col-sm-1" style="float: right">
                        <form method="post" action="/Home/DeleteManufacturer">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="image" src="~/images/bin.png" style="max-width:24px;width:100%" />
                        </form>
                    </div>
                    <br />
                    <br />
                </div>
                <ul class="list-group">
                    <li class="list-group-item"><h4>Manufacturer name: </h4>@item.Name</li>
                    <li class="list-group-item"><h4>Picture URL: </h4>@item.PictureURL</li>
                </ul>
            </li>
        }
    </ul>
</div>