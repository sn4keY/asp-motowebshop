@model Manufacturer

<h1 class="text-center">Edit manufacturer</h1>
<hr />
<form method="post" action="/Home/EditManufacturer">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label>Manufacturer's name</label>
        <input type="text" class="form-control" placeholder="Enter manufacturer name" name="Name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label>Picture's URL</label>
        <input type="text" class="form-control" placeholder="Enter the picture's URL" name="PictureURL" value="@Model.PictureURL">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>